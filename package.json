{
  "name": "hella-turbo-controller",
  "version": "1.0.0",
  "description": "Cross-platform tool for safely reverse engineering and programming Hella Universal Turbo Actuators",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "homepage": "./",
  "author": {
    "name": "Joshua Austill",
    "email": "jlaustill@users.noreply.github.com"
  },
  "license": "MIT",
  "keywords": [
    "turbo",
    "actuator",
    "can-bus",
    "reverse-engineering",
    "automotive",
    "electron",
    "vue"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jlaustill/Hella_Turbo_Controller.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "serve dist -p 8080",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:build-main && wait-on http://localhost:3000 && electron . --no-sandbox\"",
    "electron:build-main": "tsc electron/main.ts --outDir dist-electron --target es2020 --module commonjs --moduleResolution node --esModuleInterop && mv dist-electron/main.js dist-electron/main.cjs",
    "electron:build": "npm run build && electron-builder",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "husky install",
    "commit": "cz"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@vueuse/electron": "^10.7.2",
    "electron": "^28.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "pinia": "^2.1.7",
    "socketcan": "^2.3.0",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "vuetify": "^3.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^1.2.2",
    "@vue/test-utils": "^2.4.4",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.20.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.27",
    "wait-on": "^7.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.jlaustill.hella-turbo-controller",
    "productName": "Hella Turbo Controller",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "category": "Development"
    },
    "win": {
      "target": "nsis"
    }
  }
}
